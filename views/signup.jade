extends layout

block content
	.container-fluid
		.row
			.col-md-8.col-md-offset-2
				#main(align='center')
					h1 Sign Up Page
					p Hi there, Input your details to Sign Up!
		.row
			.col-md-4.col-md-offset-4
				#signup(align='center')
					if message.length > 0
						.alert.alert-danger= message
					form(action='/signup', method='post')
						.form-group
							label Email
							input.form-control(type='text', name='email')
						.form-group
							label Password		 
							input.form-control(type='password', name='password')			 
						button.btn.btn-danger.btn-lg(type='submit') Signup!
					br
					p Already have an account? 
						a(href='/login') Login