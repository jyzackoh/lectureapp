extends layout

block content
	.container-fluid
		.row
			.col-md-4.col-md-offset-4
				#main(align='center')
					h1 Welcome to LectureApp!
					p Enter a session code to get started!
					if message && message.length > 0
						.alert.alert-danger= message

					form(method='get', enctype='multipart/form-data', action='/go')
						.form-group
							input.form-control.text-center(type='text', name='pdf_id')
						button.btn.btn-primary(type='submit') Go!
					br

					p Or Upload a file!

					form(method='post', enctype='multipart/form-data', action='/upload')
						.form-group
							input.form-control(type='file', name='slides')
						button.btn.btn-primary(type='submit') Upload!
					br

