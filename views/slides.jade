extends layout

block content
	.container-fluid
		.row
			.col-md-6.col-md-offset-3
				#main(align='center')

					a(href="/download/?path=#{slides.path}", title="download #{slides.name}")
						h1.wrap-text.truncate-cell-data= slides.name
					.embed-responsive.embed-responsive-4by3
						iframe.embed-responsive-item(src="/ViewerJS/#../download/?path=#{slides.path}")